  , BYTES/1024/1024/1024
FROM GV\$BACKUP_ASYNC_IO 
WHERE STATUS='IN PROGRESS';
prompt
prompt ##############################################################
prompt
prompt ##############################################################
SELECT INPUT_TYPE
  , TO_CHAR(START_TIME, 'DD/MM/YYYY, HH24:MI:SS') as STARTED
  , TO_CHAR(END_TIME, 'DD/MM/YYYY, HH24:MI:SS') as FINISHED
  , STATUS 
FROM V\$RMAN_BACKUP_JOB_DETAILS 
ORDER BY START_TIME;
quit;
EOF
}
