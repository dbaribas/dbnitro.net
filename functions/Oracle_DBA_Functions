SepLine() {
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
SetClear() {
  printf "\033c"
}
#
DBA_HELP() {
SetClear
SepLine
echo -e "\
|#|[ DBA_001 ] DBA: VERIFY DATABASE VERSION                            |#|[ DBA_002 ] DBA: VERIFY INSTALLED PATCHES - DETAILS             |#|
|#|[ DBA_003 ] DBA: INSTANCE INFORMATION + PGA & SGA                   |#|[ DBA_004 ] DBA: GENERAL TUNING VIEW                            |#|
