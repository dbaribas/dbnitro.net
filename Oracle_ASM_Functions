  , a.sid
  , a.failures "Failures"
  , Substr(To_Char(a.last_date,'DD/MM/YYYY HH24:MI:SS'),1,20) "Last Date"
  , Substr(To_Char(a.this_date,'DD/MM/YYYY HH24:MI:SS'),1,20) "This Date"
FROM dba_jobs_running a;
SET VERIFY ON
quit;
EOF
}
