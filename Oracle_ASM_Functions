pv_et_sample          date;                     -- sample end time from sysdate
pv_top_sql            ta_obj := ta_obj();       -- to store top sqls from pv_only_gash collection
pv_only_gc            ta_gc  :=  ta_gc();       -- Global Cache info from gv\$sysstat
